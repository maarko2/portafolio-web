---
// Obtener la URL actual para determinar en qué página estamos
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
const baseUrl = isHomePage ? '' : '/';
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-sm border-b border-gray-700 shadow-lg" style="background-color: rgba(19, 26, 41, 0.95);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo/Nombre -->
            <div class="flex-shrink-0">
                <a href="/" class="text-white font-bold text-xl hover:text-cyan-400 transition-colors">
                    Marco Burgos
                </a>
            </div>

            <!-- Navegación Desktop -->
            <nav class="hidden md:flex space-x-8">
                <a href={`${baseUrl}#inicio`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md text-lg font-medium transition-all duration-200 transform hover:scale-105">
                    Inicio
                </a>
                <a href={`${baseUrl}#about-me`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md text-lg font-medium transition-all duration-200 transform hover:scale-105">
                    Sobre Mi
                </a>
                <a href={`${baseUrl}#experiencia`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md text-lg font-medium transition-all duration-200 transform hover:scale-105">
                    Experiencia
                </a>
                <a href={`${baseUrl}#recomendaciones`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md text-lg font-medium transition-all duration-200 transform hover:scale-105">
                    Recomendaciones
                </a>
                <a href={`${baseUrl}#contacto`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md text-lg font-medium transition-all duration-200 transform hover:scale-105">
                    Contacto
                </a>
            </nav>

            <!-- Botón menú móvil -->
            <div class="md:hidden">
                <button type="button" class="text-gray-300 hover:text-white focus:outline-none focus:text-white" id="mobile-menu-button">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Menú móvil -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-700 mt-2">
                <a href={`${baseUrl}#inicio`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 block px-3 py-2 rounded-md text-lg font-medium transition-colors">
                    Inicio
                </a>
                <a href={`${baseUrl}#about-me`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 block px-3 py-2 rounded-md text-lg font-medium transition-colors">
                    Sobre Mi
                </a>
                <a href={`${baseUrl}#experiencia`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 block px-3 py-2 rounded-md text-lg font-medium transition-colors">
                    Experiencia
                </a>
                <a href={`${baseUrl}#contacto`}
                   class="text-gray-300 hover:text-white hover:bg-gray-700 block px-3 py-2 rounded-md text-lg font-medium transition-colors">
                    Contacto
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    // Funcionalidad del menú móvil
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Cerrar menú al hacer clic en un enlace
            const mobileLinks = mobileMenu.querySelectorAll('a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });
        }
    });
</script>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>