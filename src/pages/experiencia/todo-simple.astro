---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
---

<Layout>
    <Header />

    <main class="pt-16 min-h-screen" style="background-color: #131a29;">
        <div class="max-w-4xl mx-auto px-4 py-16">
            <!-- Botón volver -->
            <div class="mb-8">
                <a
                    href="/#experiencia"
                    class="inline-flex items-center text-cyan-400 hover:text-cyan-300 transition-colors"
                >
                    <svg
                        class="w-4 h-4 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Volver a Experiencia
                </a>
            </div>

            <!-- Contenido detallado -->
            <div class="bg-gray-800 rounded-xl p-8 border border-gray-700">
                <h1 class="text-4xl font-bold text-white mb-6">
                    Aplicación Móvil para Adulto Mayor y Cuidadores
                </h1>

                <!-- Contenedor de imágenes -->
                <div class="mb-8">
                    <!-- Imagen para móviles -->
                    <img
                        src="/images/experience/Todo-Simple-Movil.webp"
                        alt="Todo Simple - Vista móvil"
                        class="w-full h-48 object-cover rounded-lg shadow-lg block sm:hidden"
                    />
                    <!-- Imagen para escritorio -->
                    <img
                        src="/images/experience/Todo-Simple.webp"
                        alt="Todo Simple - Vista completa"
                        class="w-full h-96 object-cover rounded-lg shadow-lg hidden sm:block"
                    />
                </div>

                <div class="space-y-6 text-gray-300">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <div>
                            <h3 class="text-xl font-semibold text-white mb-2">
                                Cliente
                            </h3>
                            <p>Universidad Andrés Bello</p>
                        </div>
                        <div>
                            <h3 class="text-xl font-semibold text-white mb-2">
                                Duración
                            </h3>
                            <p>3 de Marzo del 2025 - 12 de Julio del 2025</p>
                        </div>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Descripción del Proyecto
                        </h3>
                        <p class="leading-relaxed">
                            Desarrollo de una aplicación web de gestión de
                            recordatorios, noticias mediante una <strong
                                >Inteligencia Artificial</strong
                            >
                            para filtrar y categorizar las noticias presentadas a
                            los usuarios finales, el cual cuenta con un sistema dual,
                            donde los cuidadores pueden configurar y gestionar los
                            recordatorios de los usuarios finales.
                        </p>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Responsabilidades
                        </h3>
                        <ul class="list-disc list-inside space-y-2">
                            <li>
                                Diseño de Solución y Experiencia de Usuario
                                (UX/UI)
                            </li>
                            <li>Análisis y Gestión de Proyecto</li>
                            <li>Desarrollo de Software (Full-Stack)</li>
                            <li>Pruebas y Aseguramiento de Calidad (QA)</li>
                        </ul>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Tecnologías Utilizadas
                        </h3>
                        <div class="flex flex-wrap gap-3">
                            <span
                                class="px-4 py-2 bg-indigo-900 text-indigo-200 text-sm font-medium rounded-full"
                                >Angular/Ionic</span
                            >
                            <span
                                class="px-4 py-2 bg-yellow-900 text-yellow-200 text-sm font-medium rounded-full"
                                >Python</span
                            >
                            <span
                                class="px-4 py-2 bg-red-900 text-red-200 text-sm font-medium rounded-full"
                                >FireBase</span
                            >
                            <span
                                class="px-4 py-2 bg-blue-900 text-blue-200 text-sm font-medium rounded-full"
                                >TypeScript</span
                            >
                            <span
                                class="px-4 py-2 bg-green-900 text-green-200 text-sm font-medium rounded-full"
                                >R</span
                            >
                            <span
                                class="px-4 py-2 bg-orange-900 text-orange-200 text-sm font-medium rounded-full"
                                >HTML</span
                            >
                            <span
                                class="px-4 py-2 bg-purple-900 text-purple-200 text-sm font-medium rounded-full"
                                >CSS</span
                            >
                            <span
                                class="px-4 py-2 bg-sky-900 text-sky-200 text-sm font-medium rounded-full"
                                >Figma</span
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>