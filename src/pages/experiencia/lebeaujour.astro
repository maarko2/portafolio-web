---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
---

<Layout>
    <Header />

    <main class="pt-16 min-h-screen" style="background-color: #131a29;">
        <div class="max-w-4xl mx-auto px-4 py-16">
            <!-- Botón volver -->
            <div class="mb-8">
                <a
                    href="/#experiencia"
                    class="inline-flex items-center text-cyan-400 hover:text-cyan-300 transition-colors"
                >
                    <svg
                        class="w-4 h-4 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Volver a Experiencia
                </a>
            </div>

            <!-- Contenido detallado -->
            <div class="bg-gray-800 rounded-xl p-8 border border-gray-700">
                <h1 class="text-4xl font-bold text-white mb-6">
                    Página Web Colegio "Le Beau Jour"
                </h1>

                <!-- Carrusel de imágenes -->
                <div class="relative mb-8">
                    <div class="overflow-hidden rounded-lg shadow-lg">
                        <div
                            id="carousel-track"
                            class="flex transition-transform duration-500 ease-in-out"
                            style="width: 400%;"
                        >
                            <div class="w-1/4 flex-shrink-0">
                                <img
                                    src="/images/experience/lebeaujour-web.webp"
                                    alt="Le Beau Jour - Vista 1"
                                    class="w-full h-96 object-cover"
                                />
                            </div>
                            <div class="w-1/4 flex-shrink-0">
                                <img
                                    src="/images/experience/lebeaujour-web2.webp"
                                    alt="Le Beau Jour - Vista 2"
                                    class="w-full h-96 object-cover"
                                />
                            </div>
                            <div class="w-1/4 flex-shrink-0">
                                <img
                                    src="/images/experience/lebeaujour-web3.webp"
                                    alt="Le Beau Jour - Vista 3"
                                    class="w-full h-96 object-cover"
                                />
                            </div>
                            <div class="w-1/4 flex-shrink-0">
                                <img
                                    src="/images/experience/lebeaujour-web4.webp"
                                    alt="Le Beau Jour - Vista 4"
                                    class="w-full h-96 object-cover"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Indicadores -->
                    <div class="flex justify-center mt-4 space-x-2">
                        <div
                            class="w-3 h-3 rounded-full bg-cyan-400 transition-colors duration-200"
                            id="indicator-0"
                        >
                        </div>
                        <div
                            class="w-3 h-3 rounded-full bg-gray-400 transition-colors duration-200"
                            id="indicator-1"
                        >
                        </div>
                        <div
                            class="w-3 h-3 rounded-full bg-gray-400 transition-colors duration-200"
                            id="indicator-2"
                        >
                        </div>
                        <div
                            class="w-3 h-3 rounded-full bg-gray-400 transition-colors duration-200"
                            id="indicator-3"
                        >
                        </div>
                    </div>
                </div>

                <div class="space-y-6 text-gray-300">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <div>
                            <h3 class="text-xl font-semibold text-white mb-2">
                                Cliente
                            </h3>
                            <p>Institución Colegio Maranatha</p>
                        </div>
                        <div>
                            <h3 class="text-xl font-semibold text-white mb-2">
                                Duración
                            </h3>
                            <p>3 de Marzo del 2025 - 30 de Mayo del 2025</p>
                        </div>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Enlace del sitio web
                        </h3>
                        <a
                            href="https://colegiocristianolebeaujour.cl/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center px-6 py-3 bg-cyan-600 hover:bg-cyan-700 text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-105 hover:shadow-lg"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                ></path>
                            </svg>
                            Visitar sitio web
                            <svg
                                class="w-4 h-4 ml-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Descripción del Proyecto
                        </h3>
                        <p class="leading-relaxed">
                            Desarrollo completo de una página web institucional
                            para el colegio "Le Beau Jour", enfocada en mostrar
                            la propuesta educativa, reglamentos y protocolos de
                            la institución. El proyecto actualmente cuenta con
                            un total de más de impresiones, ayudando ampliamente
                            al reconocimiento del colegio.
                        </p>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Responsabilidades
                        </h3>
                        <ul class="list-disc list-inside space-y-2">
                            <li>
                                Diseño y desarrollo de la interfaz de usuario
                            </li>
                            <li>
                                Implementación de funcionalidades interactivas
                            </li>
                            <li>Optimización para motores de búsqueda (SEO)</li>
                            <li>Integración con base de datos MySQL</li>
                            <li>Testing y deployment</li>
                        </ul>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold text-white mb-4">
                            Tecnologías Utilizadas
                        </h3>
                        <div class="flex flex-wrap gap-3">
                            <span
                                class="px-4 py-2 bg-blue-900 text-blue-200 text-sm font-medium rounded-full"
                                >React</span
                            >
                            <span
                                class="px-4 py-2 bg-green-900 text-green-200 text-sm font-medium rounded-full"
                                >MySQL</span
                            >
                            <span
                                class="px-4 py-2 bg-purple-900 text-purple-200 text-sm font-medium rounded-full"
                                >JavaScript</span
                            >
                            <span
                                class="px-4 py-2 bg-yellow-900 text-yellow-200 text-sm font-medium rounded-full"
                                >CSS</span
                            >
                            <span
                                class="px-4 py-2 bg-red-900 text-red-200 text-sm font-medium rounded-full"
                                >HTML</span
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let currentSlide = 0;
        const totalSlides = 4;

        const track = document.getElementById("carousel-track");

        function updateCarousel() {
            if (track) {
                const translateX = -(currentSlide * 25);
                track.style.transform = `translateX(${translateX}%)`;

                for (let i = 0; i < totalSlides; i++) {
                    const indicator = document.getElementById(`indicator-${i}`);
                    if (indicator) {
                        if (i === currentSlide) {
                            indicator.classList.remove("bg-gray-400");
                            indicator.classList.add("bg-cyan-400");
                        } else {
                            indicator.classList.remove("bg-cyan-400");
                            indicator.classList.add("bg-gray-400");
                        }
                    }
                }
            }
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateCarousel();
        }

        // Auto-slide cada 4 segundos
        setInterval(nextSlide, 4000);

        // Inicializar
        updateCarousel();
    });
</script>
